<h1>Drop Off Packages</h1>

<table>
  <thead>
    <tr>
      <% if current_user.role == "admin" %>
      <th>User</th>
      <% end %>
      <th>Tracking ref</th>
      <% if current_user.role == "admin" %>
      <th colspan="3"></th>
      <% else %>
      <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @drop_off_packages.each do |drop_off_package| %>
      <tr>
        <% if current_user.role == "admin" %>
        <td><%= drop_off_package.user.email %></td>
        <% end %>
        <td><%= drop_off_package.tracking_ref %></td>
        <td><%= link_to 'Show', drop_off_package %></td>
        <td><%= link_to 'Edit', edit_drop_off_package_path(drop_off_package) %></td>
        <td><%= link_to 'Destroy', drop_off_package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Drop Off Package', new_drop_off_package_path %>
