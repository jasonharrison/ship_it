<!DOCTYPE html>
<html>
  <head>
    <title>ShipIt</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div style="position: relative; top: 0px; right: 15px; text-align: right;">
      <% if user_signed_in? %>
        <p><%= link_to current_user.email, edit_user_registration_path %> | <%= link_to 'Sign out', destroy_user_session_path, method: :delete %></p>
      <% else %>
        <%= link_to 'Sign in', new_user_session_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
